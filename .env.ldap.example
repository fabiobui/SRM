# ============================================================================
# CONFIGURAZIONE LDAP
# ============================================================================

# Abilita/disabilita autenticazione LDAP
LDAP_ENABLED=False

# Server LDAP
LDAP_SERVER_URI=ldap://ldap.example.com:389
# Per LDAPS (SSL): ldaps://ldap.example.com:636

# Credenziali per il bind al server LDAP
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=your_password_here

# Abilita StartTLS per connessioni sicure
LDAP_START_TLS=False

# Base DN per la ricerca degli utenti
LDAP_USER_BASE_DN=ou=users,dc=example,dc=com

# Filtro per la ricerca degli utenti
# %(user)s verrà sostituito con l'email inserita dall'utente
LDAP_USER_FILTER=(mail=%(user)s)
# Alternativa per username: (uid=%(user)s)
# Per ricerca su più campi: (|(mail=%(user)s)(uid=%(user)s))

# Base DN per la ricerca dei gruppi
LDAP_GROUP_BASE_DN=ou=groups,dc=example,dc=com

